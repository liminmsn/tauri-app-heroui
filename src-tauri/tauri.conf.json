{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mozi",
  "version": "0.1.0",
  "identifier": "com.limin.guoxuemeng",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "dataDirectory": "com.limin.guoxuemeng",
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "resizable": true,
        "minWidth": 900,
        "minHeight": 600,
        "width": 900,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "windows": {
      "nsis": {
        "languages": ["SimpChinese"],
        "headerImage": "./icons/icon.png",
        "installerIcon": "./icons/icon.ico"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}